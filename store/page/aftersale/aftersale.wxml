<!--page/aftersale/aftersale.wxml-->
<view class="weui-cells weui-cells_after-title">
  <view class="weui-cell" style="color:#46a3ff;">
    <view class="weui-cell__bd">订单编号</view>
    <view class="weui-cell__ft" style="color:#46a3ff;">{{order_id}}</view>
  </view>
</view>
<view class="weui-cells weui-cells_after-title">
  <view class="weui-cell weui-cell_access" hover-class="weui-cell_active">
    <view class="weui-cell__bd">货物状态</view>
    <view class="weui-cell__ft weui-cell__ft_in-access" bindtap='open1'>{{goods[i]}}</view>
  </view>
</view>
<view class="weui-cells weui-cells_after-title" style='height:100rpx'>
  <view class="weui-cell weui-cell_access" hover-class="weui-cell_active">
    <view class="weui-cell__bd">售后原因</view>
    <view class="weui-cell__ft weui-cell__ft_in-access" bindtap='open2'>{{reason[j]}}</view>
  </view>
</view>
<view class="weui-cells weui-cells_after-title">
  <view class="weui-cell">
    <view class="weui-cell__bd">
      <textarea class="weui-textarea" bindinput="addnotes" placeholder="补充说明" style="height: 3.3em" />
    </view>
  </view>
</view>
<button class="weui-btn" bindtap='submitinfo' type="primary">提交</button>